{
  "name": "comment-system",
  "version": "1.0.0",
  "description": "Full-stack comment system with React and NestJS",
  "scripts": {
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "build": "cd backend_comment && npm run build",
    "build:frontend": "cd frontend_comment && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "deploy": "npm run build && npm run start:prod",
    "deploy:railway": "railway up",
    "deploy:railway:backend": "railway up --service backend",
    "deploy:railway:frontend": "railway up --service frontend"
  },
  "keywords": [
    "comments",
    "nestjs",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
